<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.anuragbaheti.fuseit.MainActivity">

    <ImageButton
        android:id="@+id/alarm"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="111dp"
        app:srcCompat="@drawable/alarm"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/todo"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginTop="118dp"
        app:srcCompat="@drawable/list"
        android:layout_below="@+id/alarm"
        android:layout_alignLeft="@+id/alarm"
        android:layout_alignStart="@+id/alarm"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/note"
        android:layout_width="75sp"
        android:layout_height="75sp"
        app:srcCompat="@drawable/reminder"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_alignTop="@+id/alarm"
        android:layout_toRightOf="@+id/alarm"
        android:layout_toEndOf="@+id/alarm"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/voicerecorder"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignLeft="@+id/note"
        android:layout_alignStart="@+id/note"
        android:layout_alignTop="@+id/todo"
        app:srcCompat="@drawable/record"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/note"
        android:layout_alignLeft="@+id/note"
        android:layout_alignRight="@+id/note"
        android:layout_alignStart="@+id/note"
        android:layout_below="@+id/note"
        android:layout_marginTop="10dp"
        android:text="NOTES"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/alarm"
        android:layout_alignLeft="@+id/alarm"
        android:layout_alignRight="@+id/alarm"
        android:layout_alignStart="@+id/alarm"
        android:layout_below="@+id/alarm"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="ALARM"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/todo"
        android:layout_alignLeft="@+id/todo"
        android:layout_alignRight="@+id/todo"
        android:layout_alignStart="@+id/todo"
        android:layout_below="@+id/todo"
        android:layout_marginTop="10dp"
        android:text="TO DO LIST"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/voicerecorder"
        android:layout_alignLeft="@+id/voicerecorder"
        android:layout_alignRight="@+id/voicerecorder"
        android:layout_alignStart="@+id/voicerecorder"
        android:layout_below="@+id/voicerecorder"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="VOICE RECORDER"
        android:textColor="@android:color/white"/>


</RelativeLayout>
